<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardActivity">

    <GridLayout
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:useDefaultMargins="true"
        android:visibility="visible"
        android:columnCount="2"
        android:rowCount="4"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/textViewWed"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:layout_row="0"
            android:text="WED 17"
            android:textAlignment="center"
            android:textColor="#0000FF"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textViewWednesday"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:text="Wednesday"
            android:textAlignment="center"
            android:textColor="#0000FF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewThu"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:layout_row="1"
            android:text="THU 18"
            android:textAlignment="center"
            android:textColor="#0000FF"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textViewThursday"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="Thursday"
            android:textAlignment="center"
            android:textColor="#0000FF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewFri"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:layout_row="2"
            android:text="FRI 19"
            android:textAlignment="center"
            android:textColor="#0000FF"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textViewFriday"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="2"
            android:text="Friday"
            android:textAlignment="center"
            android:textColor="#0000FF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewSat"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:layout_row="3"
            android:text="SAT 20"
            android:textAlignment="center"
            android:textColor="#0000FF"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textViewSaturday"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="3"
            android:text="Saturday"
            android:textAlignment="center"
            android:textColor="#0000FF"
            android:textSize="30sp" />

    </GridLayout>
</RelativeLayout>
